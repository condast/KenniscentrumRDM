<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" android:weightSum="1" android:gravity="top">
    <Switch
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Remote Control"
            android:id="@+id/remoteControl" android:layout_weight="0.16"
            android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
            android:gravity="top" android:layout_marginTop="20dp"/>
    <LinearLayout
            android:id="@+id/controls"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="20dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="195dp"
                android:layout_height="wrap_content" android:gravity="center_vertical|center_horizontal">
            <Button
                    android:layout_width="110dp"
                    android:layout_height="99dp"
                    android:text="Forward"
                    android:id="@+id/forwardLeft"/>
            <Button
                    android:layout_width="110dp"
                    android:layout_height="99dp"
                    android:text="Backward"
                    android:id="@+id/reverseLeft" android:layout_marginTop="20dp"/>
            <NumberPicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/speedLeft" android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp" android:orientation="vertical"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:gravity="center_vertical|center_horizontal"
                android:weightSum="1">
            <Button
                    android:layout_width="110dp"
                    android:layout_height="99dp"
                    android:text="Forward"
                    android:id="@+id/forwardRight"/>
            <Button
                    android:layout_width="110dp"
                    android:layout_height="99dp"
                    android:text="Backward"
                    android:id="@+id/reverseRight" android:layout_gravity="center" android:layout_marginTop="20dp"/>
            <NumberPicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/speedRight" android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp" android:orientation="vertical"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

